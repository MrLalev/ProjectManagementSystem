<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<h2>Reports</h2>

<p>
    @Html.ActionLink("Create Report", "Create", "Project_Report", new { id = Model.Id }, null)
</p>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Creator</th>
        <th>Options</th>
    </tr>

    @for (int i = 0; i < Model.Project_ReportVM.Items.Count(); i++)
    {
        <tr>
            <td>@Model.Project_ReportVM.Items[i].Title</td>
            <td>@Model.Project_ReportVM.Items[i].Content</td>
            <td>@Model.Project_ReportVM.creators[i]</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Project_Report", new { id = Model.Project_ReportVM.Items[i].Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Project_Report", new { id = Model.Project_ReportVM.Items[i].Id },null)
            </td>
        </tr>
    }

</table>

@Html.Partial("~/Views/Shared/_Pager.cshtml", Model.Project_ReportVM.Pager)