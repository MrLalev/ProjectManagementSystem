@model ProjectManagementSystem.ViewModels.TaskVM.ListTaskVM

@{
    ViewBag.Title = "Index";
}

<h2>Tasks</h2>

@Html.Partial("~/Views/Shared/_Search.cshtml", Model.Filter)

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Project</th>
        <th>Assignet</th>
        <th>Creator</th>
        <th>Options</th>
    </tr>

@for (int i = 0; i < Model.Items.Count(); i++ )
{
    <tr>
        <td>@Model.Items[i].Title</td>
        <td>@Model.Items[i].Status</td>
        <td>@Model.projects[i]</td>
        <td>@Model.assignets[i]</td>
        <td>@Model.creators[i]</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Items[i].Id }) |
            @Html.ActionLink("Details", "Details", new { id = Model.Items[i].Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.Items[i].Id }) |
            @Html.ActionLink("Create Comment", "Create", "Comment", new { id = Model.Items[i].Id }, null) |
            @Html.ActionLink("Log Work", "Create", "LogWork", new { id = Model.Items[i].Id }, null)
        </td>
    </tr>
}

</table>
@Html.Partial("~/Views/Shared/_Pager.cshtml", Model.Pager)